@if (Context.User.Identity.Name != null)
{
    <form asp-controller="Home" asp-action="Logout" method="post" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-link text-dark">Hello @Context.User.Identity.Name!</li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>

    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller="Home" asp-action="Signup">SignUp</a></li>
        <li><a class="nav-link text-dark" asp-controller="Home" asp-action="Login">Login</a></li>
    </ul>
}